@using CarsShop.Models
@model IList<Car>
@{
    ViewBag.Title = "SearchResult";
}

<h2 style="text-align:center">Результаты поиска</h2>
@for (int i = 0; i < Model.Count; i++)
{
    <div class="list-group">
        <a href="#" class="list-group-item">
            <div class="media col-md-3">
                <figure class="pull-left">
                    <img class="media-object img-rounded img-responsive" src="\donthotlink-crazy-frog-1280x1024-2.jpg" alt="placehold.it/350x250">
                </figure>
            </div>
            <div class="col-md-6">
                <h4 class="list-group-item-heading"> Описание </h4>
                <p class="list-group-item-text">
                   @(Model[i].Mark + " " + Model[i].Series + " " + Model[i].BodyType + " " + Model[i].Color + " " + "Цвет" + " " +
                   Model[i].Drive + " " + "Привод" + " " + Model[i].FuelType + " " + Model[i].Transmission + " " + "Год выпуска" + Model[i].Year )
                </p>
            </div>
            <div class="col-md-3 text-center">
                <h2> @Model[i].CountViews <small> Просмотров </small></h2>
                <input type="button" class="btn btn-default btn-lg btn-block">
                <div class="stars">
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star-empty"></span>
                </div>
            </div>
        </a>
    </div>
} 
